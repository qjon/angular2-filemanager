{
  "compilerOptions": {
    "declaration": true,
    "module": "es2015",
    "target": "es2015",
    "baseUrl": "../tmp",
    "experimentalDecorators": true,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "outDir": "../tmp/esm2015",
    "rootDir": "../tmp",
    "skipLibCheck": true,
    "lib": [
      "es2015",
      "dom"
    ]
  },
  "files": [
    "../tmp/public_api.ts"
  ],
  "exclude": [
    "../node_modules"
  ],
  "angularCompilerOptions": {
    "annotateForClosureCompiler": true,
    "strictMetadataEmit": true,
    "skipTemplateCodegen": true,
    "flatModuleOutFile": "angular2-filemanager.js",
    "flatModuleId": "@rign/angular2-filemanager"
  }
}
